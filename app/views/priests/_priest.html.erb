<%= form_with model: @priest do |form| %>
<h4>Personal Information</h4>

<div class="form-group">
  <%= form.label :first_name, class: 'form-control-label' %>
  <%= form.text_field :first_name, class: 'form-control', id: 'priest_first_name' %>
</diV>

<div class="form-group">
  <%= form.label :last_name, class: 'form-control-label' %>
  <%= form.text_field :last_name, class: 'form-control', id: 'last_first_name' %>
</diV>

<div class="form-group">
  <%= form.label :display_name, class: 'form-control-label' %>
  <%= form.text_field :display_name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :national_identification_number, class: 'form-control-label' %>
  <%= form.text_field :display_name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :birth_date, class: 'form-control-label' %>
  <%= form.date_field :birth_date, class: 'form-control' %>
</div>

<h4>Priesthoods</h4>

<table class="table">
  <thead>
    <tr>
      <th><input type="checkbox" class="select-all" /></th>
      <th>Id</td>
      <th>From</th>
      <th>Until</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @priest.priesthoods.each do |priesthood| %>
    <tr>
      <td><input type="checkbox" value="<%= priesthood.id %>" /></td>
      <td><%= priesthood.id %></td>
      <td><%= priesthood.period_begin %></td>
      <td><%= priesthood.period_end %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% end %>
