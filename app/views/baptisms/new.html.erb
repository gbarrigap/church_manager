<div class="card">
  <div class="card-header">
    <h2>New Baptism</h2>
  </div>

  <div class="card-body">
    <%= form_with model: @baptism do |form| %>
    <div class="row">
      <div class="col">
        <%= render partial: 'baptism', locals: { form: form } %>
      </div>

      <div class="col mt-auto">
        <%= form.fields_for @baptised do |person_form| %>
          <%= render partial: 'people/person', locals: { form: person_form, type: 'baptised' } %>
        <% end %>

        <%= form.fields_for @mother do |person_form| %>
          <%= render partial: 'people/person', locals: { form: person_form, type: 'mother' } %>
        <% end %>

        <%= form.fields_for @father do |person_form| %>
          <%= render partial: 'people/person', locals: { form: person_form, type: 'father' } %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>

  <div class="card-footer">
    ChurchManager @2018 - Developed by <a href="//bitbox.cl">BitBox.cl</a>
  </div>
</div>
