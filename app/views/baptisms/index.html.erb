<%= content_for :title, t('general.baptisms') %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t('activerecord.attributes.baptism.baptised') %></th>
      <th><%= t('activerecord.attributes.person.nin') %></th>
      <th><%= t('activerecord.attributes.baptism.date') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @baptisms.each_with_index do |baptism, i| %>
    <tr>
      <td><%= (i + 1) %></td>
      <td><%= baptism.baptised.name_for_display %></td>
      <td><%= baptism.baptised.nin_for_display %></td>
      <td><%= baptism.date %></td>
      <td>
        <%= link_to fa_icon('eye 2x'), baptism, class: 'action', title: t('general.view') %>
        <%= link_to fa_icon('edit 2x'), edit_baptism_path(baptism), class: 'action', title: t('general.edit') %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
