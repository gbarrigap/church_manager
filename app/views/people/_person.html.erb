<%= form_with model: @person do |form| %>
<%= hidden_field_tag 'selector', @selector %>
<%= hidden_field_tag 'related_selector', @related_selector %>
<div class="form-group">
  <%= form.label :nin_for_display, class: 'form-control-label' %>
  <div class="input-group">
    <%= form.text_field :national_identification_number, class: 'form-control national-identification-number' %>
    <div class="input-group-append">
      <%= link_to 'Change', people_nin_form_path(selector: @selector, related_selector: @related_selector), remote: true, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= form.label :first_name, class: 'form-control-label' %>
  <%= form.text_field :first_name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :last_name, class: 'form-control-label' %>
  <%= form.text_field :last_name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :display_name, class: 'form-control-label' %>
  <%= form.text_field :display_name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :avatar_url, class: 'form-control-label' %>
  <%= form.text_field :avatar_url, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :birth_date, class: 'form-control-label' %>
    <%= form.date_field :birth_date, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :birth_commune_id, class: 'form-control-label' %>
  <%= form.collection_select :birth_commune_id, Commune.all, :id, :name, {}, { class: 'form-control' } %>
</div>

<div class="form-group">
  <%= form.submit class: 'btn btn-secondary' %>
</div>
<% end %>
