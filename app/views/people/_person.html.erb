<%= f.fields_for person do |form| %>
<div class="card d-none side-fields" id="baptism_<%= person.class.name.downcase %>_fields">
  <div class="card-header">
    <h3>New <%= person.class.name %></h3>
  </div>

  <div class="card-body">
    <div class="form-group">
      <%= form.label :first_name, class: 'form-control-label' %>
      <%= form.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :last_name, class: 'form-control-label' %>
      <%= form.text_field :last_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.button 'Ok', type: :button,
                            class: 'btn btn-secondary btn-block',
                            data: { command: 'set',
                                    target: "#baptism_#{person.class.name.downcase}" } %>
    </div>
  </div>
</div>
<% end %>
