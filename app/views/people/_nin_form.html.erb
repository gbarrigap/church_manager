<%= form_with model: person, url: { action: 'person_form_by_nin', controller: 'people' }, scope: 'person' do |form| %>
<%= form.hidden_field :type %>
<%= hidden_field_tag 'selector', "#{person.type.downcase}_fields" %>
<div class="form-group">
  <%= form.label :national_identification_number, class: 'form-control-label' %>
  <div class="input-group">
    <%= form.text_field :national_identification_number, class: 'form-control national-identification-number' %>
    <div class="input-group-append">
      <%= form.button 'Next', type: 'submit', class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
<% end %>
